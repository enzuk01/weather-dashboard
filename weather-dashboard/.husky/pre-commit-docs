#!/bin/sh
. "$(dirname "$0")/_/husky.sh"
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)
for FILE in $STAGED_FILES; do
  if [[ "$FILE" == "README.md" || "$FILE" == "SERVER_MANAGEMENT.md" || "$FILE" == "RELEASE_WORKFLOW.md" ]]; then
    echo "üîç Documentation file changes detected. Running documentation reference check..."
    ./scripts/update-docs.sh --dry-run
    exit 0
  fi
done
exit 0
